<UserControl x:Class="ControlLibrary.SalaryCalculator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlLibrary"
             mc:Ignorable="d" 
             Height="160" Width="240" Background="LightYellow">
    <Canvas>
        <TextBox Canvas.Left="60" TextWrapping="Wrap" x:Name="Text1" Text="基本工资" Canvas.Top="24" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox Canvas.Left="60" TextWrapping="Wrap" x:Name="Text2" Text="岗位工资" Canvas.Top="63" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox Canvas.Left="60" TextWrapping="Wrap" x:Name="Text3" Text="实际工资" Canvas.Top="103" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button Content="计算" Canvas.Left="82" Canvas.Top="131" RenderTransformOrigin="0.028,-0.014" HorizontalAlignment="Left" VerticalAlignment="Center" Width="76" Click="Button_Click"/>
    </Canvas>
</UserControl>
